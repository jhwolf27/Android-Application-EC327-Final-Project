<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.Birdoge.Birdoge.HowToPlayPage1"
    android:background="@drawable/ice">

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/button"
        android:onClick="onClick"
        android:layout_alignParentTop="true"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ball"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView4"
        android:layout_below="@+id/button" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="This is you. Tilt your phone to avoid the bombs. If too many of them hit you, its game over!"
        android:id="@+id/textView2"
        android:textColor="#f95153ff"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/blocker"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/button"
     />

    <TextView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="These are the bombs. Each time you hit a bomb you lose a heart. Lose all your hearts and its game over!"
        android:id="@+id/textView3"
        android:textColor="#ff2f37ff"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:text="Next"
        android:id="@+id/button2"
        android:layout_above="@+id/imageView3"
        android:layout_alignRight="@+id/textView2"
        android:onClick="onClick2" />


</RelativeLayout>
