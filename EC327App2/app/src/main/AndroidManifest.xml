<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ernie.ec327app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameActivity"
            android:label="@string/title_activity_game"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".pause_menu"
            android:label="@string/title_activity_pause_menu" >
        </activity>
        <activity
            android:name=".instructions"
            android:label="@string/title_activity_instructions" >
        </activity>
        <activity
            android:name=".HowToPlay"
            android:label="@string/title_activity_how_to_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".GameScreen"
            android:label="@string/title_activity_game_screen" >
        </activity>
    </application>

</manifest>
